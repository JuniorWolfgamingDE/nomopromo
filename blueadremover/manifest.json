{
  "manifest_version": 3,
  "name": "NoMoPromo",
  "version": "1.0",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://twitter.com/*"
  ],
  "action": {
    "default_popup": "assets/pages/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://twitter.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
